<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="6"
        >

        <Button
            android:id="@+id/bt_ac"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:fontFamily="monospace"
            android:text="AC"
            android:textColor="#FF5722"
            android:textSize="32sp"
            app:backgroundTint="@color/button"></Button>

        <Button
            android:id="@+id/bt_pt"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:fontFamily="monospace"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:text="%"
            android:textSize="32sp"
            app:backgroundTint="@color/button"></Button>

        <ImageButton
            android:id="@+id/bt_ce"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:backgroundTint="#3F51B5"
            android:fontFamily="monospace"
            android:src="@drawable/ic_group_4"
            android:text="CE"
            android:textSize="32sp"
            app:backgroundTint="@color/button"></ImageButton>

        <Button
            android:id="@+id/bt_chia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:fontFamily="monospace"
            android:text="/"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:textColor="#FF5722"
            android:textSize="32sp"
            app:backgroundTint="@color/button"></Button>

        <Button
            android:id="@+id/bt_7"
            android:layout_width="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:fontFamily="monospace"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:text="7"
            android:textSize="32sp"
            app:backgroundTint="@color/button"></Button>

        <Button
            android:id="@+id/bt_8"
            android:layout_width="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:fontFamily="monospace"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:text="8"
            android:textSize="32sp"
            app:backgroundTint="@color/button"></Button>

        <Button
            android:id="@+id/bt_9"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:fontFamily="monospace"
            android:text="9"
            android:textSize="32sp"
            app:backgroundTint="@color/button"></Button>

        <Button
            android:id="@+id/bt_X"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:fontFamily="monospace"
            android:text="X"
            android:textColor="#FF5722"
            android:textSize="32sp"
            app:backgroundTint="@color/button"></Button>

        <Button
            android:id="@+id/bt_4"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:fontFamily="monospace"
            android:text="4"
            android:textSize="32sp"
            app:backgroundTint="@color/button"></Button>

        <Button
            android:id="@+id/bt_5"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:fontFamily="monospace"
            android:text="5"
            android:textSize="32sp"
            app:backgroundTint="@color/button"></Button>

        <Button
            android:id="@+id/bt_6"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:fontFamily="monospace"
            android:text="6"
            android:textSize="32sp"
            app:backgroundTint="@color/button"></Button>

        <Button
            android:id="@+id/bt_tru"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:fontFamily="monospace"
            android:text="-"
            android:textColor="#FF5722"
            android:textSize="32sp"
            app:backgroundTint="@color/button"></Button>

        <Button
            android:id="@+id/bt_1"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:fontFamily="monospace"
            android:text="1"
            android:textSize="32sp"
            app:backgroundTint="@color/button"></Button>

        <Button
            android:id="@+id/bt_2"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:fontFamily="monospace"
            android:text="2"
            android:textSize="32sp"
            app:backgroundTint="@color/button"></Button>

        <Button
            android:id="@+id/bt_3"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:fontFamily="monospace"
            android:text="3"
            android:textSize="32sp"
            app:backgroundTint="@color/button"></Button>

        <Button
            android:id="@+id/bt_cong"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:fontFamily="monospace"
            android:text="+"
            android:textColor="#FF5722"
            android:textSize="32sp"
            app:backgroundTint="@color/button"></Button>

        <Button
            android:id="@+id/bt_0"
            android:layout_width="192dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:fontFamily="monospace"
            android:text="0"
            android:textSize="32sp"
            app:backgroundTint="@color/button">

        </Button>

        <Button
            android:id="@+id/bt_."
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:fontFamily="monospace"
            android:text="."
            android:textSize="32sp"
            app:backgroundTint="@color/button">

        </Button>

        <Button
            android:id="@+id/bt_result"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:fontFamily="monospace"
            android:text="="
            android:textSize="32sp"
            app:backgroundTint="#FB6514" />
    </GridLayout>

</RelativeLayout>